{% extends 'base.html.twig' %}
{% block body %}
	<h1 class="flex justify-center mt-10 text-4xl tracking-tight font-extrabold text-gray-900">Ajouter un post</h1>
	<div class="w-1/2 mx-auto mt-10">
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}})}}
		{{ form_widget(form) }}
		<button type="submit" class="w-full text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800">{{ button_label|default('Publier') }}</button>
		{{ form_end(form) }}
	</div>
{% endblock %}

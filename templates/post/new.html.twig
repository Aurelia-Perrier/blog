{% extends 'base.html.twig' %}
{% block body %}
	<h1 class="flex justify-center mt-10 text-4xl tracking-tight font-extrabold text-gray-900">Ajouter un post</h1>
	<div class="w-1/2 mx-auto mt-10">
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}})}}
		{{ form_widget(form) }}
		<button type="submit" class="bg-orange w-full text-beige border border-beige focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">{{ button_label|default('Publier') }}</button>
		{{ form_end(form) }}
	</div>
{% endblock %}

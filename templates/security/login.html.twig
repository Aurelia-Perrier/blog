{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	{% if app.user %}
		<div class="mb-3">
			Vous êtes connecté en tant que 
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}">Déconnexion</a>
		</div>
	{% endif %}

		<form method="post" class="my-8 w-5/6 mx-auto"> <div class="mb-6">
			<label for="inputEmail" class="block mb-2 text-sm font-medium text-gray-900">Votre email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green focus:border-green block w-full p-2.5" placeholder="votreprenom@gmail.com" autocomplete="email" required autofocus>
		</div>
		<div class="mb-6">
			<label for="inputPassword" class="block mb-2 text-sm font-medium text-gray-900">Votre mot de passe</label>
			<input type="password" id="inputPassword" name="password" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green focus:border-green block w-full p-2.5" autocomplete="current-password" required>
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<button type="submit" class="text-beige bg-orange focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Submit</button>
	</form>
	<div class="flex items-start my-8 w-5/6 mx-auto">
		<div class="text-sm font-medium text-gray-500">
			Not registered?
			<a href="#" class="text-orange hover:underline">Create account</a>
		</div>
	</div>


{% endblock %}
